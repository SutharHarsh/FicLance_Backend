# Node Environment
NODE_ENV=development

# Beta Mode Configuration
# Set to true to enable beta mode (unlimited projects, no plan restrictions)
# Set to false or leave unset for normal operation
IS_BETA_MODE=false

# Server Configuration
PORT=8080
API_PREFIX=/api/v1

# Database
MONGODB_URI=mongodb://localhost:27017/ficlance
MONGODB_DB=ficlance

# Redis
REDIS_URL=redis://localhost:6379

# JWT Secrets (CHANGE IN PRODUCTION - min 32 chars)
JWT_ACCESS_TOKEN_SECRET=your_secure_access_token_secret_min_32_chars_long
JWT_ACCESS_TOKEN_TTL=15m
JWT_REFRESH_TOKEN_SECRET=your_secure_refresh_token_secret_min_32_chars_long
JWT_REFRESH_TOKEN_TTL=30d

# Cookies
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# CORS
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# S3 / MinIO
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=ficlance
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_USE_SSL=false

# Agent Service
AGENT_SERVICE_URL=http://localhost:8000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10

# Admin Users (comma-separated user IDs)
ADMIN_USER_IDS=

# Stripe  Payment Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_PREMIUM=price_your_premium_price_id
STRIPE_PRICE_ID_PRO=price_your_pro_price_id

# OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Sentry (Optional)
SENTRY_DSN=

# Logging
LOG_LEVEL=info
