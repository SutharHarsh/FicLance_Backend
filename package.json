{
  "name": "ficlance-backend",
  "version": "1.0.0",
  "description": "Production-ready backend for FicLance simulation platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "worker": "node src/worker.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:integration": "jest --testMatch='**/tests/integration/**/*.spec.js'",
    "lint": "eslint src/**/*.js",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seedTemplates.js",
    "clean:redis": "node scripts/cleanRedis.js",
    "docker:build": "docker build -t ficlance-backend .",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  },
  "keywords": [
    "ficlance",
    "simulation",
    "education",
    "freelance"
  ],
  "author": "FicLance Team",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.400.0",
    "@aws-sdk/s3-request-presigner": "^3.400.0",
    "@sentry/node": "^7.70.0",
    "@socket.io/redis-adapter": "^8.2.1",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^4.14.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "joi": "^17.10.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.8",
    "nodemailer": "^7.0.12",
    "passport": "^0.6.0",
    "passport-github2": "^0.1.12",
    "passport-google-oauth20": "^2.0.0",
    "prom-client": "^15.0.0",
    "rate-limiter-flexible": "^2.4.0",
    "simple-git": "^3.20.0",
    "socket.io": "^4.6.0",
    "stripe": "^14.0.0",
    "uuid": "^9.0.0",
    "validator": "^13.11.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "eslint": "^8.48.0",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^9.1.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
